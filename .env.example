# =============================================================================
# Planka-Vibes Environment Configuration
# =============================================================================
# Copy this file to .env and configure all required values before starting.
# NEVER commit .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL Database (Code-Vibes)
# -----------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here

# -----------------------------------------------------------------------------
# Keycloak Authentication
# -----------------------------------------------------------------------------
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=your-keycloak-admin-password

# -----------------------------------------------------------------------------
# Application Security
# -----------------------------------------------------------------------------
# Set to 'false' for development without authentication
APP_SECURITY_ENABLED=true

# -----------------------------------------------------------------------------
# Planka Configuration
# -----------------------------------------------------------------------------
# Secret key for JWT tokens (generate with: openssl rand -hex 32)
PLANKA_SECRET_KEY=your-planka-secret-key-minimum-32-chars

# Planka admin account
PLANKA_ADMIN_EMAIL=admin@planka.local
PLANKA_ADMIN_PASSWORD=your-planka-admin-password
PLANKA_ADMIN_NAME=Admin
PLANKA_ADMIN_USERNAME=admin

# Planka URL (for external access)
PLANKA_BASE_URL=http://localhost:3000

# Log level (debug, info, warn, error)
PLANKA_LOG_LEVEL=info

# -----------------------------------------------------------------------------
# RFC-Planka Integration
# -----------------------------------------------------------------------------
# Enable/disable integration
PLANKA_ENABLED=true
RFC_ENABLED=true
RFC_WEBHOOKS_ENABLED=true

# Planka API token (generate in Planka UI: Settings -> Access Tokens)
# Required for RFC->Planka synchronization
PLANKA_API_TOKEN=

# Webhook secret for Planka->RFC callbacks (generate with: openssl rand -hex 16)
PLANKA_WEBHOOK_SECRET=your-webhook-secret-here

# Planka project and board IDs for RFC cards
# Get these from Planka URL: /boards/{BOARD_ID} -> Project ID from API
PLANKA_PROJECT_ID=
PLANKA_BOARD_ID=

# Auto-sync RFC to Planka on create/update
PLANKA_AUTO_SYNC=true
